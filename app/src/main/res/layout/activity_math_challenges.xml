<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activity.game.MathChallengesActivity">

    <ImageView
        android:id="@+id/btVoltar"
        android:layout_width="60sp"
        android:layout_height="60sp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/seta_voltar" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="386dp"
        android:layout_height="399dp"
        android:layout_marginTop="76dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginTop="20sp"
            android:background="@drawable/campo_conta"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textNum1Conta1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="10sp"
                android:gravity="center"
                android:text="000"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/textOperacaoConta1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="10sp"
                android:gravity="center"
                android:text="-"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/textNum2Conta1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="10sp"
                android:gravity="center"
                android:text="000"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/textView33"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="10sp"
                android:gravity="center"
                android:text="="
                android:textSize="25sp" />

            <EditText
                android:id="@+id/editTextRespostaConta1"
                android:layout_width="125dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:foregroundGravity="center"
                android:gravity="center"
                android:hint="Resposta"
                android:inputType="text"
                android:textSize="25sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginTop="20sp"
            android:background="@drawable/campo_conta"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textNum1Conta2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="10sp"
                android:gravity="center"
                android:text="000"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/textOperacaoConta2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="10sp"
                android:gravity="center"
                android:text="-"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/textNum2Conta2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="10sp"
                android:gravity="center"
                android:text="000"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/textView38"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="10sp"
                android:gravity="center"
                android:text="="
                android:textSize="25sp" />

            <EditText
                android:id="@+id/editTextRespostaConta2"
                android:layout_width="125dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:foregroundGravity="center"
                android:gravity="center"
                android:hint="Resposta"
                android:inputType="text"
                android:textSize="25sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginTop="20sp"
            android:background="@drawable/campo_conta"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textNum1Conta3"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="10sp"
                android:gravity="center"
                android:text="000"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/textOperacaoConta3"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="10sp"
                android:gravity="center"
                android:text="-"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/textNum2Conta3"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="10sp"
                android:gravity="center"
                android:text="000"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/textView25"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="10sp"
                android:gravity="center"
                android:text="="
                android:textSize="25sp" />

            <EditText
                android:id="@+id/editTextRespostaConta3"
                android:layout_width="125dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:foregroundGravity="center"
                android:gravity="center"
                android:hint="Resposta"
                android:inputType="text"
                android:textSize="25sp" />
        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:id="@+id/btChecar"
        android:layout_width="183dp"
        android:layout_height="54dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.834"
        app:srcCompat="@drawable/button_fundo_escuro" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Checar"
        android:textColor="#FFFFFF"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="@+id/btChecar"
        app:layout_constraintEnd_toEndOf="@+id/btChecar"
        app:layout_constraintStart_toStartOf="@+id/btChecar"
        app:layout_constraintTop_toTopOf="@+id/btChecar" />


</androidx.constraintlayout.widget.ConstraintLayout>